@{
    ViewData["Title"] = "Circuit Breaker 控制面板";
}
<h1>@ViewData["Title"]</h1>

<table style="width: 50%; border-collapse: collapse; margin: 20px auto;">
    <tr>
        <th style="border: 1px solid #ddd; padding: 10px; text-align: left;">狀態項目</th>
        <th style="border: 1px solid #ddd; padding: 10px; text-align: left;">值</th>
        <th style="border: 1px solid #ddd; padding: 10px; text-align: center;">操作</th>
    </tr>
    <tr>
        <td style="border: 1px solid #ddd; padding: 10px;">目前斷路器狀態</td>
        <td style="border: 1px solid #ddd; padding: 10px;">@ViewData["CircuitState"]</td>
        <td style="border: 1px solid #ddd; padding: 10px; text-align: center;">
            <div class="buttons" style="display: flex; gap: 10px; justify-content: center;">
                <form asp-action="Open" asp-controller="CircuitBreaker" method="post" style="display: inline;">
                    <button type="submit" style="background-color: #f44336; color: white; padding: 5px 10px; border: none; cursor: pointer;">手動開啟斷路器</button>
                </form>
                <form asp-action="Close" asp-controller="CircuitBreaker" method="post" style="display: inline;">
                    <button type="submit" style="background-color: #4CAF50; color: white; padding: 5px 10px; border: none; cursor: pointer;">手動關閉斷路器</button>
                </form>
            </div>
        </td>
    </tr>
</table>